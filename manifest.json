{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",
  "author": "Yiannis",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "sender-notes@thunderbird.addon",
      "strict_min_version": "128.0",
      "data_collection_permissions": {
        "required": false
      }
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "menus",
    "messagesRead",
    "accountsRead",
    "scripting"
  ],
  "background": {
    "scripts": [
      "storage/StorageAdapter.js",
      "storage/schema.js",
      "storage/IndexedDBAdapter.js",
      "storage/NotesRepository.js",
      "storage/MigrationRunner.js",
      "storage/migrations.js",
      "background.js"
    ]
  },
  "message_display_action": {
    "default_title": "__MSG_viewNoteTitle__",
    "default_icon": {
      "16": "icons/icon-48.png",
      "32": "icons/icon-48.png"
    },
    "default_popup": "popup/view-note.html"
  },
  "options_ui": {
    "page": "manage/manage-notes.html",
    "open_in_tab": true
  }
}
